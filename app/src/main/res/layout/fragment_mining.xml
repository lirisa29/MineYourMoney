<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mining_root"
    android:fitsSystemWindows="true"
    android:background="?attr/android:colorBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".crystals.CrystalsFragment">

    <!-- AppBar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        style="@style/TopAppBarStyle"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:title=""
        app:contentInsetStart="0dp">

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="80dp"
            android:paddingEnd="50dp"
            app:flexDirection="row"
            app:flexWrap="wrap"
            app:justifyContent="space_between"
            app:alignItems="center">

            <TextView
                android:id="@+id/tv_toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mining"
                android:textAppearance="@style/TextHeading"
                android:maxLines="1"
                android:ellipsize="end"
                app:layout_flexShrink="1"
                app:layout_flexGrow="0" />

            <!-- Crystal Vault Button (now spaced correctly) -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_crystal_vault"
                style="@style/PrimaryButton"
                android:layout_marginTop="8dp"
                android:text="Crystal Vault" />

        </com.google.android.flexbox.FlexboxLayout>
    </com.google.android.material.appbar.MaterialToolbar>

    <!-- Scrollable content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp"
        android:layout_marginTop="?attr/actionBarSize"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Horizontal progress with number box -->
            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp">

                <TextView
                    android:id="@+id/streak_number"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="12dp"
                    android:gravity="center"
                    android:text="3"
                    android:textAppearance="@style/TextBody" />

                <com.google.android.material.progressindicator.LinearProgressIndicator
                    android:id="@+id/mining_progress"
                    android:layout_width="0dp"
                    android:layout_height="12dp"
                    android:layout_weight="1"
                    android:progress="30"
                    android:max="100"
                    app:trackColor="@color/text_secondary_dark"
                    app:indicatorColor="?attr/colorPrimary"
                    app:trackThickness="18dp"/>

            </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:padding="24dp"
            app:cardBackgroundColor="?attr/android:colorForeground"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <!-- Crystal Image -->
            <ImageView
                android:id="@+id/crystal_image"
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:layout_marginTop="38dp"
                android:layout_marginBottom="12dp"
                android:src="@drawable/ic_add_photo"
                android:scaleType="centerCrop" />

        </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

            <!-- Hint text -->
            <TextView
                android:id="@+id/log_expenses_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Log expenses to earn swings!"
                android:textAppearance="@style/TextLabel"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="8dp" />

            <!-- Use Swing -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_use_swing"
                style="@style/PrimaryButton"
                android:text="Use Swing"
                android:layout_marginBottom="8dp"/>

            <!-- Available Swings -->
            <TextView
                android:id="@+id/available_swings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 Available Swings"
                android:textAppearance="@style/TextBody" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Floating Help Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/help_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:backgroundTint="@color/purple"
        android:layout_margin="20dp"
        app:srcCompat="@drawable/ic_help"
        app:maxImageSize="50dp"
        app:tint="@color/white"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
