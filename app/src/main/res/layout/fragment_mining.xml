<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mining_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".crystals.CrystalsFragment">

    <!-- Top App Bar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        style="@style/TopAppBarStyle"
        app:title="Mining"
        app:titleCentered="true"
        app:layout_scrollFlags="scroll|enterAlways">

        <!-- Optional: Crystal Vault button on the right -->
        <Button
            android:id="@+id/button_crystal_vault"
            style="@style/PrimaryButton"
            android:layout_gravity="end"
            android:text="Crystal Vault"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="4dp" />
    </com.google.android.material.appbar.MaterialToolbar>

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Progress Text -->
            <TextView
                android:id="@+id/progress_text"
                style="@style/TextHeading"
                android:text="0%"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="center" />

            <!-- Progress Bar -->
            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/mining_progress"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:progress="0"
                android:max="100"
                android:layout_marginBottom="32dp" />

            <!-- Crystal Image Placeholder -->
            <ImageView
                android:id="@+id/crystal_image"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginBottom="24dp"
                android:contentDescription="Crystal Image"
                android:src="@drawable/ic_add_photo"
                android:scaleType="fitCenter" />

            <!-- Use Swing Button -->
            <Button
                android:id="@+id/button_use_swing"
                style="@style/PrimaryButton"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Use Swing"
                android:layout_marginBottom="12dp" />

            <!-- Available Swings Text -->
            <TextView
                android:id="@+id/available_swings"
                style="@style/TextLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9 Available Swings"
                android:gravity="center" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>
