<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/walletsFragmentRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- AppBar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        style="@style/TopAppBarStyle"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:title=""
        app:contentInsetStart="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="50dp"
            android:paddingEnd="50dp">

            <!-- Title Text -->
            <TextView
                android:id="@+id/tv_toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wallets_title"
                android:textAppearance="@style/TextHeading"
                android:layout_marginEnd="16dp"
                android:ellipsize="end"
                android:maxLines="1" />

            <!-- Search Input -->
            <SearchView
                android:id="@+id/search_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxWidth="488dp"
                android:iconifiedByDefault="false"
                android:queryHint="Search..."
                android:layout_marginEnd="8dp"/>

            <!-- Sort Button -->
            <ImageButton
                android:id="@+id/btn_sort"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_sort"
                app:tint="?attr/android:textColorSecondary"
                android:contentDescription="@string/sort_wallets" />

        </LinearLayout>
    </com.google.android.material.appbar.MaterialToolbar>

    <!-- Content Area -->
    <LinearLayout
        android:id="@+id/walletsContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp"
        android:layout_marginTop="?attr/actionBarSize">

        <!-- Spending Overview Button -->
        <Button
            android:id="@+id/btn_spending_overview"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="@string/spending_overview"
            android:textAppearance="@style/TextLabel"
            android:background="@android:color/transparent"
            android:padding="0dp"
            android:minHeight="0dp"
            android:minWidth="0dp"
            app:icon="@drawable/ic_arrow_right"
            app:iconGravity="textEnd"
            app:iconTint="?attr/android:textColorSecondary"
            android:textColor="?attr/android:textColorSecondary"/>

        <!-- Create New Wallet Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_create_wallet"
            style="@style/PrimaryButton"
            android:text="@string/create_new_wallet"
            android:layout_marginTop="12dp" />

        <!-- Wallet List -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/walletsRecyclerView"
            android:layout_width="300dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:clipToPadding="false"/>
    </LinearLayout>

    <!-- Floating Action Button -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/fab_add_expense"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:text="@string/add_expense"
        android:textSize="14sp"
        app:cornerRadius="28dp"
        android:gravity="center"
        android:padding="4dp"
        style="@style/PrimaryButton" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>