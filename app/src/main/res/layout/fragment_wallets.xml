<?xmil version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/walletsFragmentRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="?attr/android:colorBackground">

    <!-- AppBar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        style="@style/TopAppBarStyle"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:title=""
        app:contentInsetStart="0dp">

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            app:flexDirection="row"
            app:flexWrap="wrap"
            app:justifyContent="space_between"
            app:alignItems="center">

            <TextView
                android:id="@+id/tv_toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wallets_title"
                android:textAppearance="@style/TextHeading"
                android:maxLines="1"
                android:ellipsize="end"
                app:layout_flexShrink="1"
                app:layout_flexGrow="0" />

            <SearchView
                android:id="@+id/search_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_flexGrow="1"
                app:layout_flexShrink="1"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:iconifiedByDefault="false"
                android:queryHint="Search..." />

            <ImageButton
                android:id="@+id/btn_sort"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_sort"
                app:tint="?attr/android:textColorSecondary"
                android:contentDescription="@string/sort_wallets" />

        </com.google.android.flexbox.FlexboxLayout>
    </com.google.android.material.appbar.MaterialToolbar>

    <!-- Content Area (FlexboxLayout instead of LinearLayout) -->
    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/walletsContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:padding="16dp"
        app:flexDirection="column"
        app:justifyContent="flex_start"
        app:alignItems="center">

        <Button
            android:id="@+id/btn_spending_overview"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:padding="0dp"
            android:text="@string/spending_overview"
            android:textAppearance="@style/TextLabel"
            android:textColor="?attr/android:textColorPrimary"
            app:icon="@drawable/ic_arrow_right"
            app:iconGravity="textEnd"
            app:iconTint="?attr/android:textColorSecondary" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_create_wallet"
            style="@style/PrimaryButton"
            android:layout_marginTop="12dp"
            android:text="@string/create_new_wallet" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/walletsRecyclerView"
            android:layout_width="300dp"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            app:layout_flexGrow="1"
            android:clipToPadding="false" />

    </com.google.android.flexbox.FlexboxLayout>

    <FrameLayout
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="40dp"
        android:layout_marginEnd="30dp">

        <ImageButton
            android:id="@+id/fab_add_expense"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bg_gradient_round"
            android:background="@null"
            android:scaleType="centerCrop"
            android:contentDescription="@string/add_expense"/>

        <TextView
            android:id="@+id/fab_add_expense_label"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/add_expense"
            style="@style/TextPrimaryButton"
            android:gravity="center"
            android:padding="4dp" />
    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
