<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp">

    <!-- BACKGROUND ACTION BUTTONS (shown when swiped left) -->
    <LinearLayout
        android:id="@+id/bg_actions"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="start|center_vertical"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_delete_wallet"
            android:layout_width="50dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_delete"
            android:background="@android:color/transparent"
            app:tint="?attr/android:colorError"
            android:padding="0dp"
            android:adjustViewBounds="true"
            android:scaleType="centerInside" />

        <ImageButton
            android:id="@+id/btn_edit_wallet"
            android:layout_width="50dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_edit"
            android:background="@android:color/transparent"
            android:padding="0dp"
            android:adjustViewBounds="true"
            android:scaleType="centerInside" />
    </LinearLayout>

    <!-- FOREGROUND CARD (swipeable part) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_foreground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="?attr/android:colorForeground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/img_wallet_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_icon_button"
                android:backgroundTint="?attr/android:colorForeground"
                android:src="@drawable/ic_wallets"
                android:scaleType="centerInside"
                android:layout_marginStart="16dp"
                android:contentDescription="@string/wallet_icon" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_wallet_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextLabel" />

                <TextView
                    android:id="@+id/tv_wallet_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextBody"
                    android:textColor="?attr/android:textColorSecondary" />
            </LinearLayout>

            <ImageView
                android:id="@+id/img_arrow"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_right"
                app:tint="?attr/android:textColorSecondary"
                android:contentDescription="@string/go_to_wallet" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>