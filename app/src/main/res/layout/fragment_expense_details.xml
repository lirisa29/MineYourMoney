<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/expenseDetailsCoordinatorLayout"
    android:background="?attr/android:colorBackground">

    <!-- Top AppBar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        style="@style/TopAppBarStyle"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:navigationContentDescription="@string/back"
        app:navigationIcon="@drawable/ic_back"
        app:navigationIconTint="?attr/android:textColorSecondary"
        app:title="Expense Details">
    </com.google.android.material.appbar.MaterialToolbar>

    <!-- Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:padding="16dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Expense Details Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="?attr/android:colorForeground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp">

                    <!-- Amount -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Amount:"
                        android:textAppearance="@style/TextLabel" />

                    <TextView
                        android:id="@+id/tv_expense_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextBody"
                        android:layout_marginBottom="12dp" />

                    <!-- Wallet -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Wallet:"
                        android:textAppearance="@style/TextLabel" />

                    <TextView
                        android:id="@+id/tv_wallet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextBody"
                        android:layout_marginBottom="12dp" />

                    <!-- Date -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date:"
                        android:textAppearance="@style/TextLabel" />

                    <TextView
                        android:id="@+id/tv_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextBody"
                        android:layout_marginBottom="12dp" />

                    <!-- Recurrence -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Recurrence:"
                        android:textAppearance="@style/TextLabel" />

                    <TextView
                        android:id="@+id/tv_recurrence"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextBody"
                        android:layout_marginBottom="12dp" />

                    <!-- Photo -->
                    <TextView
                        android:id="@+id/tv_photo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Photo:"
                        android:textAppearance="@style/TextLabel"/>

                    <TextView
                        android:id="@+id/tv_photo_empty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginBottom="12dp"
                        android:textAppearance="@style/TextBody"
                        android:visibility="gone"/>

                    <ImageView
                        android:id="@+id/img_photo"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="12dp"
                        android:contentDescription="Expense Photo"
                        android:scaleType="centerCrop"
                        android:visibility="gone" />

                    <!-- Note -->
                    <TextView
                        android:id="@+id/tv_note_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Note:"
                        android:textAppearance="@style/TextLabel" />

                    <TextView
                        android:id="@+id/tv_note"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginBottom="4dp"
                        android:textAppearance="@style/TextBody" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Delete Button -->
            <Button
                android:id="@+id/btn_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="?attr/android:colorError"
                android:text="Delete Expense"
                android:textColor="@android:color/white"
                android:textAppearance="@style/TextBody" />
        </LinearLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>