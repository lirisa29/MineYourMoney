<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:title="Mining Rules"
        app:navigationIcon="@drawable/ic_back"
        app:titleCentered="true" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:layout_marginTop="?attr/actionBarSize">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- SECTION TITLE -->
            <TextView
                android:text="How Mining Works"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginBottom="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="• Each day you start with 3 swings.\n\n• Breaking crystals rewards you with a crystal based on rarity chances.\n\n• Staying within your budget increases your odds of RARE crystals.\n\n• Falling below your minimum budget increases your odds of LEGENDARY crystals.\n\n• Some crystals may give buffs such as extra swing days, bonus damage, or streak protection."
                android:textSize="16sp"
                android:layout_marginBottom="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="Streak System"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginBottom="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="• Logging expenses daily increases your streak.\n\n• A higher streak shows up as a flame icon next to your swings.\n\n• A Streak Protector buff can save your streak if you miss a day."
                android:textSize="16sp"
                android:layout_marginBottom="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="Crystal Vault"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginBottom="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="• Every crystal you unlock is stored here.\n\n• You can take screenshots and share them with friends.\n\n• Crystals are grouped by rarity."
                android:textSize="16sp"
                android:layout_marginBottom="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
