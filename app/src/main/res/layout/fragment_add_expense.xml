<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/android:colorBackground"
    android:clickable="true"
    android:focusableInTouchMode="true">

    <!-- Top App Bar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        style="@style/TopAppBarStyle"
        app:title="@string/add_expense"
        app:navigationIcon="@drawable/ic_back"
        app:navigationContentDescription="@string/back"
        app:navigationIconTint="?attr/android:textColorSecondary"/>

    <!-- Content -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:padding="16dp">

        <!-- ❗ CHANGED: Main layout replaced with FlexboxLayout -->
        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="24dp"
            app:flexDirection="column"
            app:justifyContent="flex_start"
            app:alignItems="center">
            <!-- END FLEXBOX -->

            <!-- Amount Section -->
            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:flexDirection="row"
                app:flexWrap="nowrap"
                app:alignItems="center"
                app:justifyContent="flex_start">

                <ImageView
                    android:id="@+id/img_wallet_icon"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_margin="16dp"
                    android:contentDescription="@string/wallet_icon"
                    android:background="@drawable/bg_icon_button"
                    android:scaleType="centerInside"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingEnd="16dp">

                    <TextView
                        android:id="@+id/tv_expense_amount_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="@string/enter_amount"
                        style="@style/TextBody" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/expense_amount_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:boxBackgroundColor="?attr/android:colorForeground">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_expense_amount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"/>
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </com.google.android.flexbox.FlexboxLayout>

            <!-- Wallet Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/selectWalletLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="?attr/android:colorForeground">

                <!-- ❗ CHANGED to FlexboxLayout -->
                <com.google.android.flexbox.FlexboxLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    app:flexDirection="row"
                    app:flexWrap="wrap"
                    app:alignItems="center"
                    app:justifyContent="space_between">
                    <!-- END FLEXBOX -->

                    <ImageView
                        android:id="@+id/img_wallet"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="20dp"
                        android:src="@drawable/ic_wallets"
                        android:contentDescription="@string/wallet_icon"
                        app:tint="?attr/android:textColorSecondary"/>

                    <TextView
                        android:id="@+id/tv_wallet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/select_wallet"
                        style="@style/TextBody" />

                    <TextView
                        android:id="@+id/tv_selected_wallet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:visibility="gone"
                        android:textAlignment="textEnd"
                        style="@style/TextLabel" />

                    <ImageButton
                        android:id="@+id/btn_wallet_dropdown"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_drop_down"
                        android:background="@drawable/bg_icon_button"
                        app:tint="?attr/android:textColorPrimary"/>
                </com.google.android.flexbox.FlexboxLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- REPEAT THE SAME FLEXBOX REPLACEMENT for Date Picker, Recurrence, Photo Card -->

            <!-- Date Picker Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="?attr/android:colorForeground">

                <!-- CHANGED -->
                <com.google.android.flexbox.FlexboxLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    app:flexDirection="row"
                    app:alignItems="center"
                    app:flexWrap="wrap"
                    app:justifyContent="space_between">
                    <!-- END FLEXBOX -->

                    <ImageView
                        android:id="@+id/img_calendar"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="20dp"
                        android:src="@drawable/ic_calendar"
                        android:contentDescription="@string/calendar_icon"
                        app:tint="?attr/android:textColorSecondary"/>

                    <TextView
                        android:id="@+id/tv_select_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/select_date"
                        style="@style/TextBody" />

                    <TextView
                        android:id="@+id/tv_selected_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:visibility="gone"
                        android:textAlignment="textEnd"
                        style="@style/TextLabel" />

                    <ImageButton
                        android:id="@+id/btn_date_dropdown"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_drop_down"
                        android:background="@drawable/bg_icon_button"
                        app:tint="?attr/android:textColorPrimary"/>
                </com.google.android.flexbox.FlexboxLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Recurrence Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="?attr/android:colorForeground">

                <!-- CHANGED -->
                <com.google.android.flexbox.FlexboxLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    app:flexDirection="row"
                    app:flexWrap="wrap"
                    app:alignItems="center"
                    app:justifyContent="space_between">
                    <!-- END FLEXBOX -->

                    <ImageView
                        android:id="@+id/img_select_recurrence"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="20dp"
                        android:src="@drawable/ic_recurrence"
                        android:contentDescription="@string/repeat_icon"
                        app:tint="?attr/android:textColorSecondary"/>

                    <TextView
                        android:id="@+id/tv_select_recurrence"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/select_recurrence"
                        style="@style/TextBody" />

                    <TextView
                        android:id="@+id/tv_selected_recurrence"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:visibility="gone"
                        android:textAlignment="textEnd"
                        style="@style/TextLabel" />

                    <ImageButton
                        android:id="@+id/btn_recurrence_dropdown"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_drop_down"
                        android:background="@drawable/bg_icon_button"
                        app:tint="?attr/android:textColorPrimary"/>
                </com.google.android.flexbox.FlexboxLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Photo Upload Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="?attr/android:colorForeground">

                <!-- CHANGED -->
                <com.google.android.flexbox.FlexboxLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    app:flexDirection="row"
                    app:flexWrap="wrap"
                    app:alignItems="center"
                    app:justifyContent="space_between">
                    <!-- END FLEXBOX -->

                    <ImageView
                        android:id="@+id/img_upload_photo"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="20dp"
                        android:src="@drawable/ic_add_photo"
                        android:contentDescription="@string/photo_icon"
                        app:tint="?attr/android:textColorSecondary"/>

                    <TextView
                        android:id="@+id/tv_upload_photo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/upload_photo"
                        style="@style/TextBody" />

                    <ImageButton
                        android:id="@+id/btn_upload_photo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:padding="12dp"
                        android:src="@drawable/ic_add"
                        android:contentDescription="@string/upload_photo"
                        app:tint="?attr/android:textColorPrimary"/>
                </com.google.android.flexbox.FlexboxLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Note Input (no need for flexbox here) -->
            <TextView
                android:id="@+id/tv_add_note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="@string/add_note_optional"
                style="@style/TextBody" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/input_note_layout"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_marginBottom="24dp"
                app:boxBackgroundColor="?attr/android:colorForeground"
                app:counterEnabled="true"
                app:counterMaxLength="150">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_input_note"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="type note here..."
                    android:maxLength="150"
                    android:inputType="textCapSentences|textMultiLine"
                    android:ellipsize="end"/>
            </com.google.android.material.textfield.TextInputLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_confirm"
                style="@style/PrimaryButton"
                android:layout_marginTop="8dp"
                android:text="@string/confirm" />

        </com.google.android.flexbox.FlexboxLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>