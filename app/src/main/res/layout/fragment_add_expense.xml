<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/android:colorBackground">

    <!-- Top App Bar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        style="@style/TopAppBarStyle"
        app:title="@string/add_expense"
        app:navigationIcon="@drawable/ic_back"
        app:navigationContentDescription="@string/back"
        app:navigationIconTint="?attr/android:textColorSecondary"/>

    <!-- Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="24dp">

            <!-- Amount Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_wallet_icon"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="25dp"
                    android:contentDescription="@string/wallet_icon"
                    android:scaleType="centerInside"
                    android:background="@drawable/bg_icon_button" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:id="@+id/tv_expense_amount_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="60dp"
                        android:layout_marginBottom="10dp"
                        android:text="@string/enter_amount"
                        style="@style/TextBody" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/expense_amount_layout"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="60dp"
                        app:boxBackgroundColor="?attr/android:colorForeground">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_expense_amount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="R0.00"
                            android:inputType="numberDecimal" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Wallet Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="?attr/android:colorForeground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/img_wallet"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="20dp"
                        android:contentDescription="@string/wallet_icon"
                        android:src="@drawable/ic_wallets"
                        app:tint="?attr/android:textColorSecondary"/>

                    <TextView
                        android:id="@+id/tv_wallet"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/select_wallet"
                        style="@style/TextBody" />

                    <TextView
                        android:id="@+id/tv_selected_wallet"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=""
                        android:textAlignment="textEnd"
                        android:layout_marginEnd="4dp"
                        android:visibility="gone"
                        style="@style/TextLabel" />

                    <ImageButton
                        android:id="@+id/btn_wallet_dropdown"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginEnd="2dp"
                        android:contentDescription="@string/select_wallet"
                        android:src="@drawable/ic_drop_down"
                        android:background="@drawable/bg_icon_button"
                        app:tint="?attr/android:textColorPrimary"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Date Picker Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="?attr/android:colorForeground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/img_calendar"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="20dp"
                        android:contentDescription="@string/calendar_icon"
                        android:src="@drawable/ic_calendar"
                        app:tint="?attr/android:textColorSecondary"/>

                    <TextView
                        android:id="@+id/tv_select_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/select_date"
                        style="@style/TextBody" />

                    <TextView
                        android:id="@+id/tv_selected_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=""
                        android:textAlignment="textEnd"
                        android:layout_marginEnd="4dp"
                        android:visibility="gone"
                        style="@style/TextLabel" />

                    <ImageButton
                        android:id="@+id/btn_date_dropdown"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginEnd="2dp"
                        android:contentDescription="@string/select_date"
                        android:src="@drawable/ic_drop_down"
                        android:background="@drawable/bg_icon_button"
                        app:tint="?attr/android:textColorPrimary"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Recurrence Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="?attr/android:colorForeground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/img_select_recurrence"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="20dp"
                        android:contentDescription="@string/repeat_icon"
                        android:src="@drawable/ic_recurrence"
                        app:tint="?attr/android:textColorSecondary"/>

                    <TextView
                        android:id="@+id/tv_select_recurrence"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/select_recurrence"
                        style="@style/TextBody" />

                    <TextView
                        android:id="@+id/tv_selected_recurrence"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=""
                        android:textAlignment="textEnd"
                        android:layout_marginEnd="4dp"
                        android:visibility="gone"
                        style="@style/TextLabel" />

                    <ImageButton
                        android:id="@+id/btn_recurrence_dropdown"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginEnd="2dp"
                        android:contentDescription="@string/select_recurrence"
                        android:src="@drawable/ic_drop_down"
                        android:background="@drawable/bg_icon_button"
                        app:tint="?attr/android:textColorPrimary"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Photo Upload Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="?attr/android:colorForeground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/img_upload_photo"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="20dp"
                        android:contentDescription="@string/photo_icon"
                        android:src="@drawable/ic_add_photo"
                        app:tint="?attr/android:textColorSecondary"/>

                    <TextView
                        android:id="@+id/tv_upload_photo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/upload_photo"
                        style="@style/TextBody" />

                    <ImageButton
                        android:id="@+id/btn_upload_photo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:scaleType="centerInside"
                        android:padding="12dp"
                        android:src="@drawable/ic_add"
                        app:tint="?attr/android:textColorPrimary"
                        android:contentDescription="@string/upload_photo"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Note Input -->
            <TextView
                android:id="@+id/tv_add_note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="@string/add_note_optional"
                style="@style/TextBody" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/input_note_layout"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_marginBottom="24dp"
                app:boxBackgroundColor="?attr/android:colorForeground"
                app:counterEnabled="true"
                app:counterMaxLength="150">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_input_note"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="type note here..."
                    android:maxLength="150"
                    android:inputType="textCapSentences|textMultiLine"
                    android:ellipsize="end"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Confirm Button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_confirm"
                style="@style/PrimaryButton"
                android:layout_marginTop="8dp"
                android:text="@string/confirm" />
        </LinearLayout>
    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>