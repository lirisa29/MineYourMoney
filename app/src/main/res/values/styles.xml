<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Text Appearance -->
    <style name="TextBody">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/android:textColorPrimary</item>
        <item name="android:fontFamily">@font/inter_regular</item>
    </style>

    <style name="TextHeading">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?attr/android:textColorPrimary</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
    </style>

    <style name="TextLabel">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/android:textColorSecondary</item>
        <item name="android:fontFamily">@font/inter_regular</item>
    </style>

    <style name="TextAppTitle">
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">?attr/android:textColorSecondary</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="TextPrimaryButton">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Button Appearances -->
    <style name="PrimaryButton" parent="TextPrimaryButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/gradient_accent</item>
        <item name="android:backgroundTint">@null</item>
        <item name="android:padding">12dp</item>
    </style>

    <!-- Top App Bar -->
    <style name="TopAppBarStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:background">@null</item>
        <item name="titleTextAppearance">@style/TextHeading</item>
        <item name="android:elevation">0dp</item>
        <item name="titleCentered">true</item>
    </style>

    <!-- Bottom App Bar -->
    <style name="BottomAppBarStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">?android:attr/windowBackground</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="itemIconTint">?attr/android:textColorSecondary</item>
        <item name="itemTextColor">?attr/android:textColorSecondary</item>
        <item name="menu">@menu/menu_bottom_nav</item>
        <item name="android:importantForAccessibility">yes</item>
        <item name="android:contentDescription">@string/bottom_navigation</item>
        <item name="android:layout_gravity">bottom</item>
    </style>

    <!-- Bottom Sheet Dialog -->
    <style name="BottomSheetDialogTheme" parent="Theme.MaterialComponents.DayNight.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="android:background">@color/black</item>
    </style>

    <style name="BottomSheetAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_up</item>
        <item name="android:windowExitAnimation">@anim/slide_out_down</item>
    </style>

    <!-- Custom Date Range Picker Theme -->
    <style name="CustomDateRangePicker" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <!-- Header background + title -->
        <item name="materialCalendarHeaderTitle">@style/CustomCalendarTitle</item>
        <item name="materialCalendarHeaderSelection">@style/CustomCalendarSelection</item>
        <item name="materialCalendarHeaderLayout">@style/CustomCalendarHeader</item>
    </style>

    <!-- Header background style -->
    <style name="CustomCalendarHeader" parent="@style/Widget.MaterialComponents.MaterialCalendar.HeaderLayout">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <style name="CustomCalendarTitle">
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?attr/android:calendarTextColor</item>
    </style>

    <style name="CustomCalendarSelection" parent="@style/TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/android:calendarTextColor</item>
    </style>

</resources>